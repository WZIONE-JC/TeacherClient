<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/menu"
        android:padding="0dp">


        <ImageView
            android:id="@+id/back_my_class"
            android:layout_width="46dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_back" />


        <TextView
            android:id="@+id/class_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="操作系统"
            android:textColor="@color/color_1afa29"
            android:textSize="19sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:text="最新通知" />

            <Button
                android:id="@+id/more_course_announcement"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:textColor="@color/color_1afa29"
                android:textAllCaps="false"

                android:background="@null"
                android:text="more>" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:text="通知内容" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="time" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/course_ware_class"
            android:layout_marginLeft="40dp"
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:background="@drawable/background"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_courseware"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="课件"
                android:textColor="@color/color_1afa29"
                android:textSize="18sp" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/homework"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_marginRight="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:background="@drawable/background"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_homework" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="作业"
                android:textColor="@color/color_1afa29"
                android:gravity="center"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:id="@+id/sign_in"
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_marginLeft="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:background="@drawable/background"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_sign_in"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="点名"
                android:textColor="@color/color_1afa29"
                android:textSize="18sp" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/test"
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="40dp"
            android:gravity="center">

            <ImageView
                android:background="@drawable/background"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_test" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小测"
                android:textColor="@color/color_1afa29"
                android:gravity="center"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>