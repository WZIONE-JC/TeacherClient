<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teacherclient.WriteNewCard"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/menu"
        android:padding="0dp">


        <ImageView
            android:id="@+id/back_form_homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发表作业"
            android:textColor="@color/color_1afa29"
            android:textSize="19sp" />

        <Button
            android:id="@+id/button_send_homework"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@null"
            android:text="发布"
            android:textColor="@color/color_1afa29"
            android:textSize="19sp"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/homework_title"
                android:hint="标题"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="#A9A9A9"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:background="@null"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/menu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#A9A9A9"
                android:text="截止时间"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
            <DatePicker
                android:id="@+id/homework_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:theme="@android:style/Theme.Holo.Light"/>
            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu"/>

            <EditText
                android:hint="作业内容"
                android:textSize="16sp"
                android:id="@+id/homework_content"
                android:minLines="5"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/cursor_color"
                android:background="@null"
                android:gravity="left|top"
                android:inputType="textMultiLine"
                android:textColorHint="#A9A9A9"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>